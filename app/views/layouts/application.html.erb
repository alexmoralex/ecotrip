<!DOCTYPE html>
<html>
  <head>
    <title>Ecotrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style media="screen">
      .orange-line{
        border: 2px solid #F96009;
        width: 50%;
        margin-top: 0px;
        padding-bottom: 0px;
       }
       .text-footer{
         text-align: center;
         color: #555555;
         font-family: "Arial";
         font-weight: "500";
         font-size: 12px;
         margin-top: -10px;
         margin-bottom: 0px;
       }
       h4{
         color: white;
         font-family: "Arial";
         font-weight: "500";
         font-size: 12px;
       }
    </style>
  </head>

  <body>
    <div class="container-fluid" style="padding-bottom: 15px;">
      <div class="row align-items-end">
        <div class="col-1">
          <img src="/assets/Logo-ecotrip.png" style="padding-left: 20px;" width="100px">
        </div>
        <div class="col-11">
          <img class="align-bottom" src="/assets/Slogan-ecot.png" width=800px>
        </div>
      </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #AECD13; margin-bottom: 30px;">
  <strong><%= link_to "INICIO", root_path, class:"navbar-brand", style:"color: white;" %></strong>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a><%= link_to "Crear viaje", "/trips/new", class:"btn btn-light" %></a>
      </li>
    </ul>

    <div>
      <% if user_signed_in? %>
       <%= link_to current_user.email, edit_user_registration_path, style:"color:white; text-decoration: none;" %>
       <%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete, class:"btn btn-outline-light" %>
      <% else %>
       <%= link_to "Registrate", new_user_registration_path, class:"btn btn-outline-light" %>
       <%= link_to "Inicia Sesion", new_user_session_path, class:"btn btn-outline-light" %>
      <% end %>
    </div>
  </div>
</nav>

    <%= yield %>

  </body>
  <!-- Footer -->
  <footer class="page-footer", style="position:relative; margin-top: 50px; auto; bottom:0; width:100%;">

    <!-- Copyright -->
    <div class="footer-copyright text-center">
      <hr class="orange-line">
      <p class="text-footer">COLOMBIA P√ÅGINAS OFICIALES</p>
    </div>
    <div class="footer-logos" style="background-color: #AECD13;">
      <div class="container" style="padding: 20px 0px;">
        <div class="row">
          <div class="col-sm-1 col-md-3 col-lg-3">
            <div class="row">
              <div class="col-4">
                <img src="/assets/Logo-parquesNacionales.png" height="80px">
              </div>
              <div class="col-8" style="vertical-align: middle;">
                <h4 style="padding-top: 30px;">PARQUES NACIONALES</h4>
              </div>
            </div>
          </div>
          <div class="col-sm-1 col-md-3 col-lg-3">
          </div>
          <div class="col-sm-1 col-md-3 col-lg-3">
            <div class="row">
              <div class="col-4">
                <img src="/assets/Logo-proco.png" height="80px">
              </div>
              <div class="col-8">
                <h4 style="padding-top: 30px;">PROCOLOMBIA</h4>
              </div>
            </div>
          </div>
          <div class="col-sm-1 col-md-3 col-lg-3">
          </div>
        </div>
      </div>

    </div>




    <!-- Copyright -->

  </footer>
  <!-- Footer -->
</html>
